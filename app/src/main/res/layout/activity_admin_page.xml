<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/grey"
        android:scaleType="fitXY"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="1000dp"
        android:layout_height="70dp"
        android:scaleX="10"
        android:src="@drawable/bar"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Reservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/indigo_daisy"
        android:text="Admin Page"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp"
        tools:ignore="ExtraText,MissingConstraints" />

    <TextView
        android:id="@+id/Guestname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:text="Guest Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:id="@+id/gsur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Guestname"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="Guest SurName"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nationality"
        android:id="@+id/gusetnat"
        android:layout_below="@+id/gsur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Guestname"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/Guestname"
        android:layout_toRightOf="@+id/Guestname" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_surname"
        android:layout_alignTop="@+id/gsur"
        android:layout_toRightOf="@+id/gsur"
        android:layout_toEndOf="@+id/gsur" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_Marks"
        android:layout_below="@+id/gsur"
        android:layout_toRightOf="@+id/gsur"
        android:layout_toEndOf="@+id/gsur" />
    <Button
        android:id="@+id/button_viewAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="View All"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="290dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#26a69a"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@android:color/white" />
    <Button
        android:id="@+id/button_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="340dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#26a69a"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@android:color/white" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/button_delete"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="390dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#26a69a"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@android:color/white" />
    <Button
        android:id="@+id/clearbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="440dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#26a69a"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@android:color/white" />
    <TextView
        android:id="@+id/textView_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gusetnat"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="ID"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_id"
        android:hint="Automatically generated"
        android:layout_alignTop="@+id/textView_id"
        android:layout_toRightOf="@+id/gusetnat"
        android:layout_toEndOf="@+id/gusetnat" />
    <Button
        android:id="@+id/Close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="500dp"
        android:backgroundTint="#26a69a"
        android:text="Close Program" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ed1"
        android:text="0"
        android:visibility="invisible"/>


</RelativeLayout>